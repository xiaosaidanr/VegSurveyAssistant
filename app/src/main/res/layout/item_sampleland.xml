<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="landData"
            type="com.thcreate.vegsurveyassistant.db.entity.SamplelandEntity"/>
        <variable
            name="clickCallback"
            type="com.thcreate.vegsurveyassistant.adapter.ItemClickCallback"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="0dp"
        android:onClick="@{() -> clickCallback.onClick(landData)}"
        >

        <RelativeLayout
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/land_id_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{landData.landId}"
                android:height="40dp"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>