<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="pointData"
            type="com.thcreate.vegsurveyassistant.db.entity.SamplepointEntity"/>
        <variable
            name="clickCallback"
            type="com.thcreate.vegsurveyassistant.adapter.ItemClickCallback"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:onClick="@{() -> clickCallback.onClick(pointData)}"
        >

        <RelativeLayout
            android:layout_marginStart="@dimen/item_horizontal_margin"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:height="40dp"
                android:id="@+id/point_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{pointData.pointId}"
                android:gravity="center_vertical"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>

